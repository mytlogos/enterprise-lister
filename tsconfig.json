{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": false,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "./website",
    "types": [
      "webpack-env",
      "jest"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "website/src/**/*.ts",
    "website/src/**/*.tsx",
    "website/src/**/*.vue"
//    "tests/**/*.ts",
//    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
